{
  "compilerOptions": {
    "target": "ES2020",                         // Modern JS output
    "module": "ESNext",                         // Use ESM format
    "moduleResolution": "node",                 // Node.js resolution
    "esModuleInterop": true,                    // Allow default import of CJS modules
    "skipLibCheck": true,                       // Skip type checking for node_modules
    "forceConsistentCasingInFileNames": true,   // OS-agnostic consistency
    "strict": true,                             // All strict type checks
    "allowSyntheticDefaultImports": true        // Helpful for OpenAI and dotenv
  },
  "include": ["src"]
}
